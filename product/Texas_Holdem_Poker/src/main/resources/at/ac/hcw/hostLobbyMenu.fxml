<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1600.0" spacing="30.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.HostLobbyController">
    <children>
      <Label text="Poker Partie Einstellungen">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
      </Label>
        <VBox alignment="CENTER" maxWidth="450.0" prefHeight="150.0" prefWidth="450.0" spacing="20.0" style="-fx-background-color: #40A0FA;">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Lobby-ID:">
                    <font>
                        <Font size="35.0" />
                    </font>
                </Text>
                <TextField fx:id="joinCodeField" alignment="CENTER" editable="false" promptText="XXXXXXXX" style="-fx-background-color: #40A0FA;" text="testText">
                    <font>
                        <Font size="30.0" />
                    </font>
                </TextField>

               <!-- Spieleranzahl -->
               <HBox alignment="CENTER" spacing="10">
                   <Label alignment="CENTER" prefWidth="150" text="Spieleranzahl:">
                  <font>
                     <Font size="20.0" />
                  </font></Label>
                   <Spinner fx:id="playerCountSpinner" initialValue="4" max="4" maxWidth="60.0" min="2" />
               </HBox>

               <HBox alignment="CENTER" spacing="10">
                   <Label alignment="CENTER" prefWidth="150" text="Big Blind:">
                  <font>
                     <Font size="20.0" />
                  </font></Label>
                   <TextField fx:id="bigBlindField" promptText="z.B. 20">
                  <font>
                     <Font size="18.0" />
                  </font></TextField>
               </HBox>

                  <!-- Blinds -->
               <HBox alignment="CENTER" spacing="10">
                   <Label alignment="CENTER" prefWidth="150" text="Small Blind:">
                  <font>
                     <Font size="20.0" />
                  </font></Label>
                   <TextField fx:id="smallBlindField" promptText="z.B. 10">
                  <font>
                     <Font size="18.0" />
                  </font></TextField>
               </HBox>

               <!-- Startkapital -->
               <HBox alignment="CENTER" spacing="10">
                   <Label alignment="CENTER" prefWidth="150" text="Startkapital:">
                  <font>
                     <Font size="20.0" />
                  </font></Label>
                   <TextField fx:id="startingChipsField" promptText="z.B. 1000">
                  <font>
                     <Font size="18.0" />
                  </font></TextField>
               </HBox>
              <Button mnemonicParsing="false" prefWidth="220.0" text="Spiel beginnen">
                  <font>
                      <Font size="25.0" />
                  </font>
              </Button>
            <Button mnemonicParsing="false" onAction="#onLobbyCloseClicked" prefWidth="220.0" text="Lobby schlieÃŸen">
               <font>
                  <Font size="25.0" />
               </font>
            </Button>
            </children>
         <padding>
            <Insets bottom="25.0" />
         </padding>
        </VBox>
    </children>
</VBox>
